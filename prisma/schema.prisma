generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customers {
  id              Int     @id @default(autoincrement())
  name            String
  email           String  @unique
  orders          orders[]  // One-to-many relation
  verifications   verifications[]
  createdAt       DateTime @default(now())
}

model employees {
  id              Int     @id @default(autoincrement())
  username        String  @unique
  name            String
  email           String  @unique
  password        String  
  role            String  
  createdAt       DateTime @default(now())
}



model orders {
  id           Int     @id @default(autoincrement())
  youtubeUrl   String
  channelName  String
  customerEmail    String   // Foreign key
  customer         customers     @relation(fields: [customerEmail], references: [email])
  createdAt       DateTime @default(now())
}

model verifications {
  id           Int     @id @default(autoincrement())
  customerEmail     String
  code            Int
  customer        customers     @relation(fields: [customerEmail], references: [email])
  createdAt         DateTime @default(now())
}